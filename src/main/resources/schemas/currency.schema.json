{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Currency",
  "description": "Schema currency",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "description": {
      "type": "string",
      "maxLength": 20
    },
    "mask": {
      "type": "string",
      "maxLength": 10
    },
    "local": {
      "type": "boolean"
    }
  },
  "maxProperties": 4,
  "propertyNames": {
    "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
  },
  "required": [
    "description",
    "mask",
    "local"
  ]
}