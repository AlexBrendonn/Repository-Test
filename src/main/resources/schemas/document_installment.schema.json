{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Document Installment",
  "description": "Schema document",
  "type": "object",
  "properties": {
    "id": {
      "type": [
        "integer",
        "null"
      ]
    },
    "due": {
      "type": "integer"
    },
    "payment": {
      "type": "string"
    },
    "document": {
      "type": "integer"
    },
    "value": {
      "type": "number"
    },
    "alternative_currency": {
      "type": "string"
    },
    "alternative_value": {
      "type": "number"
    },
    "note": {
      "type": "string"
    }
  },
  "maxProperties": 8,
  "propertyNames": {
    "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
  },
  "required": [
    "due",
    "payment",
    "document",
    "value"
  ]
}