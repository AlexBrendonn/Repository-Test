{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Login",
  "description": "Schema login",
  "type": "object",
  "properties": {
    "organization": {
      "description": "organization's name",
      "type": "string"
    },
    "nickname": {
      "description": "user's nickname",
      "type": "string"
    },
    "password": {
      "description": "user's password",
      "type": "string"
    }
  },
  "maxProperties": 3,
  "propertyNames": {
    "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
  },
  "required": [
    "organization",
    "nickname",
    "password"
  ]
}